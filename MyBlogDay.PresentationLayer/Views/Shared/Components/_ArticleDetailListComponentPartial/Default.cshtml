@model Article

<h1>Test</h1>
<!-- Kapak Fotoğrafı -->
 <div class="cover" style="background-image: url('@Model.ImageUrl');"></div>

<!-- Blog Meta Bilgileri -->
<div class="meta">
    <span>Kategori: <strong>@Model.CategoryId</strong></span>
    <span>Yazar: <strong>Ali YILDIZ</strong></span>
    <span>Oluşturma Tarihi: <strong>@Model.CreatedDate.ToString("dd-MMM-yyyy")</strong></span>
</div> 

 <!-- Blog Detayı -->
<div class="content">
    <h1>@Model.Title</h1>
<p>@Model.Description.</p>    
<p></p>
</div>